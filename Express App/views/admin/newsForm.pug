extends ../layout

block content
  h1= title

  if errors.errors !== undefined 
    each message in errors.errors 
      p=message

  form(method="post")
    p 
      label(for="title") Title
      br
      input(type="text" name="title" id="title" value=body.title || '')
    p 
      label(for="description") Description
      br
      textarea(name="description", cols="30", rows="10", id="description" )=body.title || ''
    p 
      input(type="submit" value="Save")


